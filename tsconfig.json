{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "rootDirs": [
      "src",
      "resource"
    ],
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "build",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
  },
  "exclude": [
    "build",
    "node_modules",
    "netlify"
  ]
}
